            <div class="content">
                <!-- Add Announcement -->
                <div class="row">
                    <div class="col-md-4">
                        <div class="card ">
                            <form method="post" action="/AddAnnouncement/Add">


                                <div class="card-header ">
                                    <h4 class="card-title">Add Announcement</h4>
                                </div>
                                <div class="card-body ">
                                    <textarea class="form-control aText" name="aText" id="aText"></textarea>
                                </div>
                                <div class="card-footer ">
                                    <button type="submit" class="btn btn-info btn-round" id="submitButton">Submit</button>
                                    <button type="clear" class="btn btn-info btn-round" id="clearButton">clear</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- Add Announce End -->
                    <!-- Old Annouce Begin -->
                    <div class="col-md-4">
                        <div class="card  card-tasks ">
                            <div class="card-header ">
                                <h4 class="card-title">Announcements</h4>
                                <h5 class="card-category">What's Old</h5>
                            </div>
                            <div class="card-body ">
                                <div class="table-full-width table-responsive">
                                    <table class="table" style="overflow: hidden;">
                                        <tbody>
                                            @for (int i = 0; i < Model.size; i++)
                                            {
                                                <tr>
                                                    <td class="text-left">@Model.annList[i].message</td>
                                                </tr>
                                            }
                                           
                                           
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Old Annoucne End -->
                </div>
